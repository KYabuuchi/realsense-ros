<launch>
	<!-- Note: using regular expression. match D435, D435i, D415... -->
  <arg name="device_type_camera1"    		default="d4.5"/>
  <arg name="device_type_camera2"    		default="d4.5"/>
  <arg name="serial_no_camera1"    			default="033422070080"/>
  <arg name="serial_no_camera2"    			default="908212071184"/>
  <arg name="camera1"              			default="left"/>
  <arg name="camera2"              			default="right"/>
  <arg name="tf_prefix_camera1"         default="$(arg camera1)"/>
  <arg name="tf_prefix_camera2"         default="$(arg camera2)"/>
  <arg name="initial_reset"             default="false"/>
  <arg name="enable_fisheye"            default="false"/>

  <arg name="enable_color"              default="false"/>
  <arg name="color_width"               default="640"/>
  <arg name="color_height"              default="480"/>
  <arg name="color_fps"                 default="30"/>

  <arg name="enable_depth"              default="false"/>
  <arg name="depth_width"               default="640"/>
  <arg name="depth_height"              default="480"/>
  <arg name="depth_fps"                 default="15"/>
  <arg name="clip_distance"             default="-2"/>

  <arg name="unite_imu_method"    default="copy"/>
  <arg name="gyro_fps"            default="400"/>
  <arg name="accel_fps"           default="250"/>
  <arg name="enable_gyro"         default="true"/>
  <arg name="enable_accel"        default="true"/>

  <arg name="enable_infra"        default="false"/>
  <arg name="enable_left_infra1"  default="true"/>
  <arg name="enable_left_infra2"  default="false"/>
  <arg name="enable_right_infra1" default="false"/>
  <arg name="enable_right_infra2" default="true"/>
  <arg name="infra_width"         default="848"/>
  <arg name="infra_height"        default="480"/>
  <arg name="infra_fps"           default="30"/>

  <arg name="enable_emitter"      default="false"/>

  <!-- Enable/Disable LASER emission -->
  <!-- rosrun dynamic_reconfigure dynparam set /camera/stereo_module "{'emitter_enabled': 0}"   -->
  <node name="emitter_setter_$(arg camera1)" pkg="dynamic_reconfigure" type="dynparam" args="set /$(arg camera1)/stereo_module '{'emitter_enabled': $(arg enable_emitter)}'" /> 
  <node name="emitter_setter_$(arg camera2)" pkg="dynamic_reconfigure" type="dynparam" args="set /$(arg camera2)/stereo_module '{'emitter_enabled': $(arg enable_emitter)}'" /> 

  <!-- Inter Sync Mode: MASTER -->
  <param name="$(arg camera1)/stereo_module/inter_cam_sync_mode" type="int" value="1"/> 
  <!-- Inter Sync Mode: ALL_SLAVE -->
  <param name="$(arg camera2)/stereo_module/inter_cam_sync_mode" type="int" value="3"/> 

  <!-- D435i -->
  <group ns="$(arg camera1)">
    <include file="$(find realsense2_camera)/launch/includes/nodelet.launch.xml">
      <arg name="device_type"           value="$(arg device_type_camera1)"/>
      <arg name="serial_no"             value="$(arg serial_no_camera1)"/>
      <arg name="tf_prefix"         		value="$(arg tf_prefix_camera1)"/>
      <arg name="initial_reset"         value="$(arg initial_reset)"/>

      <arg name="enable_color"          value="$(arg enable_color)"/>
      <arg name="color_width"           value="$(arg color_width)"/>
      <arg name="color_height"          value="$(arg color_height)"/>
      <arg name="color_fps"             value="$(arg color_fps)"/>

      <arg name="enable_infra"             value="$(arg enable_infra)"/>
      <arg name="enable_infra1"            value="$(arg enable_left_infra1)"/>
      <arg name="enable_infra2"            value="$(arg enable_left_infra2)"/>
      <arg name="infra_width"              value="$(arg infra_width)"/>
      <arg name="infra_height"             value="$(arg infra_height)"/>
      <arg name="infra_fps"                value="$(arg infra_fps)"/>

      <arg name="filters"               value="pointcloud"/>
      <arg name="enable_depth"            value="$(arg enable_depth)"/>
      <arg name="depth_width"             value="$(arg depth_width)"/>
      <arg name="depth_height"            value="$(arg depth_height)"/>
      <arg name="depth_fps"               value="$(arg depth_fps)"/>
      <arg name="clip_distance"           value="$(arg clip_distance)"/>

      <arg name="enable_gyro"              value="$(arg enable_gyro)"/>
      <arg name="enable_accel"             value="$(arg enable_accel)"/>
      <arg name="gyro_fps"                 value="$(arg gyro_fps)"/>
      <arg name="accel_fps"                value="$(arg accel_fps)"/>
      <arg name="unite_imu_method"         value="$(arg unite_imu_method)"/>
    </include>
  </group>

  <!-- D435i -->
  <group ns="$(arg camera2)">
    <include file="$(find realsense2_camera)/launch/includes/nodelet.launch.xml">
      <arg name="device_type"           value="$(arg device_type_camera2)"/>
      <arg name="serial_no"             value="$(arg serial_no_camera2)"/>
      <arg name="tf_prefix"		          value="$(arg tf_prefix_camera2)"/>
      <arg name="initial_reset"         value="$(arg initial_reset)"/>

      <arg name="enable_color"          value="$(arg enable_color)"/>
      <arg name="color_width"           value="$(arg color_width)"/>
      <arg name="color_height"          value="$(arg color_height)"/>
      <arg name="color_fps"             value="$(arg color_fps)"/>

      <arg name="enable_infra"             value="$(arg enable_infra)"/>
      <arg name="enable_infra1"            value="$(arg enable_right_infra1)"/>
      <arg name="enable_infra2"            value="$(arg enable_right_infra2)"/>
      <arg name="infra_width"              value="$(arg infra_width)"/>
      <arg name="infra_height"             value="$(arg infra_height)"/>
      <arg name="infra_fps"                value="$(arg infra_fps)"/>

      <arg name="filters"               value="pointcloud"/>
      <arg name="enable_depth"          value="$(arg enable_depth)"/>
      <arg name="depth_width"           value="$(arg depth_width)"/>
      <arg name="depth_height"          value="$(arg depth_height)"/>
      <arg name="depth_fps"             value="$(arg depth_fps)"/>
      <arg name="clip_distance"         value="$(arg clip_distance)"/>

      <arg name="enable_gyro"              value="$(arg enable_gyro)"/>
      <arg name="enable_accel"             value="$(arg enable_accel)"/>
      <arg name="gyro_fps"                 value="$(arg gyro_fps)"/>
      <arg name="accel_fps"                value="$(arg accel_fps)"/>
      <arg name="unite_imu_method"         value="$(arg unite_imu_method)"/>
    </include>
  </group>
</launch>
